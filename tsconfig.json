{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "paths": {
      "@app/datasource": [
        "libs/datasource/src"
      ],
      "@app/datasource/*": [
        "libs/datasource/src/*"
      ],
      "@app/common-config": [
        "libs/common-config/src"
      ],
      "@app/common-config/*": [
        "libs/common-config/src/*"
      ]
    }
  }
}